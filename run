#!/usr/bin/env bash
set -e

if [[ "$1" == "install" ]]; then
    if [[ -f requirements.txt ]]; then
        python3 -m pip install --user -r requirements.txt
    else
        echo "[run] No requirements.txt found"
    fi
    exit 0
fi

# Forward everything else to src/main.py
python3 src/main.py "$@"